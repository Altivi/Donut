<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Identifying</h2>
    
    <%= render 'signup_steps/errors' %>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for @user, url: wizard_path, html: { role: "form" } do |f| %>
          
          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :birth_date %>
            <%= f.date_select :birth_date, start_year: Date.today.year, end_year: 1900, include_blank: true, autofocus: true, class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Continue", class: "btn btn-default btn-lg btn-block" %>
          </div>
        <% end %></br>

      </div>
    </div>
  </div>
</div>