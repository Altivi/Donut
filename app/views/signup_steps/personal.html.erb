<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Personal</h2>
    
    <%= render 'signup_steps/errors' %>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for @user, url: wizard_path, html: { multipart: true, role: "form" } do |f| %>

          <div class="form-group">
            <%= f.label :avatar, "Avatar (not required)" %>
            <%= f.file_field :avatar, class: "filestyle", data: { buttonBefore: true, buttonText: "Choose avatar"} %>
          </div>
          
          <div class="form-group">
            <%= f.label :about_me, "About me (not required)" %>
            <%= f.text_area :about_me, placeholder: "Few lines about who you are :)", autofocus: true, class: "form-control", rows: 5, id: "text_area_about_me" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign Up", class: "btn btn-default btn-lg btn-block" %>
          </div>
        <% end %></br>

      </div>
    </div>
  </div>
</div>